<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StyleButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/color_button</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:minWidth">300dp</item>
    </style>
    
    <style name="TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/color_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BackArrowButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:src">@drawable/ic_arrow_back</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="PageTitle" parent="Theme.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">18sp</item>
        <item name="placeholderTextColor">@color/color_input_text</item>
        <item name="android:translationZ">2dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextAlignCenter">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TabLayoutText" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

</resources>